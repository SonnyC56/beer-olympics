# =============================================================================
# BEER OLYMPICS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your values
# 
# IMPORTANT: Never commit .env.local or real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required for user login)
# -----------------------------------------------------------------------------
AUTH_SECRET=your-random-secret-key-here
AUTH_URL=http://localhost:5173
AUTH_GOOGLE_ID=your-google-oauth-client-id
AUTH_GOOGLE_SECRET=your-google-oauth-client-secret

# -----------------------------------------------------------------------------
# DATABASE (Required for data persistence)
# -----------------------------------------------------------------------------
COUCHBASE_CONNECTION_STRING=couchbases://your-cluster.cloud.couchbase.com
COUCHBASE_USERNAME=your-username
COUCHBASE_PASSWORD=your-password
COUCHBASE_BUCKET=beer_olympics

# -----------------------------------------------------------------------------
# REAL-TIME UPDATES (Optional - app works without this)
# -----------------------------------------------------------------------------
# Get these from https://pusher.com/
VITE_PUSHER_KEY=your-pusher-app-key
VITE_PUSHER_CLUSTER=us2
PUSHER_APP_ID=your-pusher-app-id
PUSHER_SECRET=your-pusher-secret

# Enable real-time features (set to 'false' to disable)
VITE_ENABLE_REALTIME=true

# WebSocket fallback URL (for development)
# Leave empty to use default (ws://localhost:3001/ws in dev, wss://[host]/ws in prod)
VITE_WS_URL=

# -----------------------------------------------------------------------------
# MEDIA STORAGE (Optional - for future features)
# -----------------------------------------------------------------------------
# Mux for video processing
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# -----------------------------------------------------------------------------
# DEPLOYMENT (Production only)
# -----------------------------------------------------------------------------
VITE_APP_URL=https://your-app.vercel.app
NODE_ENV=production