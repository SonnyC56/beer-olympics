{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "api/**/*",
    "src/api/**/*",
    "src/services/**/*",
    "src/utils/**/*",
    "src/lib/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/pages/**/*",
    "src/components/**/*",
    "src/context/**/*",
    "src/services/monitoring.ts",
    "src/services/pusher.ts",
    "src/utils/api.ts",
    "src/utils/trpc.ts"
  ]
}